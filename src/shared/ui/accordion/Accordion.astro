---
import Icon from '@shared/ui/icon/Icon.astro'

interface Props {
  id?: string
  class?: string
  expanded?: boolean
  title: string
  contentProps?: Record<string, any>
}

const { class: className, expanded = false, title, contentProps, ...props } = Astro.props as Props

export { Accordion }
---

<div
  class:list={['accordion', className]}
  data-accordion
  data-expanded={expanded}
  {...props}
>
  <h3 class="accordion__header">
    <button
      data-accordion-button
      type="button"
      class="accordion__trigger"
    >
      <Icon
        name="plus"
        class="accordion__icon"
      />
      <span
        class="accordion__title text-left font-title text-title-32 devices:text-title-18"
        set:html={title}
      />
    </button>
  </h3>

  <div class="accordion__content">
    <div
      class:list={['accordion__content-inner text-18 devices:text-16', contentProps?.class]}
      {...contentProps}
    >
      <slot />
    </div>
  </div>
</div>

<style>
  @import './index.scss';
</style>
