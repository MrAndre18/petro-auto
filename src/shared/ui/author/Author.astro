---
import Icon from '@shared/ui/icon/Icon.astro'

interface Props {
  class?: string
}

const { class: className, ...props } = Astro.props as Props

export { Author }
---

<p
  class:list={['author', className]}
  {...props}
>
  <span>Сайт разработан: </span>
  <a
    href="https://t.me/Knyaz_sv"
    target="_blank"
    class="author__logo"
  >
    <Icon
      name="author"
      initial
      class="author__logo"
    />
  </a>
</p>

<style>
  @import './index.scss';
</style>
