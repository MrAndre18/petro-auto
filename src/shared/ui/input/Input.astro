---
import CustomPlaceholder from '../custom-placeholder/CustomPlaceholder.astro'
interface Props extends astroHTML.JSX.InputHTMLAttributes {
  class?: string
  'data-validate'?: string
  'custom-placeholder'?: boolean
  inputClass?: string
}

const {
  class: className,
  'custom-placeholder': customPlaceholder = false,
  inputClass,
  ...props
} = Astro.props as Props
---

<label
  class:list={['input', className]}
  data-input-parent
>
  <input
    class:list={['input__field devices:text-14 text-20', inputClass]}
    data-input
    placeholder={!customPlaceholder ? props.placeholder : ''}
    {...props}
  />
  {customPlaceholder && <CustomPlaceholder>{props.placeholder}</CustomPlaceholder>}
  <span
    class="input__error"
    data-error-container
  ></span>
</label>

<style>
  @import './input.scss';
</style>
