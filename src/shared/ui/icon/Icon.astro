---
import AdvantageKey from '@shared/assets/icons/advantage-key.svg'
import AdvantageTransparent from '@shared/assets/icons/advantage-transparent.svg'
import AdvantageDelivery from '@shared/assets/icons/advantage-delivery.svg'
import AdvantageLaw from '@shared/assets/icons/advantage-law.svg'
import AdvantageManager from '@shared/assets/icons/advantage-manager.svg'
import AdvantageEconomy from '@shared/assets/icons/advantage-economy.svg'
import AdvantageSupport from '@shared/assets/icons/advantage-support.svg'
import AdvantagePhoto from '@shared/assets/icons/advantage-photo.svg'
import AdvantageGuarantee from '@shared/assets/icons/advantage-guarantee.svg'
import Author from '@shared/assets/icons/author.svg'
import ArrowRight from '@shared/assets/icons/arrow-right.svg'
import ArrowTop from '@shared/assets/icons/arrow-top.svg'
import Telegram from '@shared/assets/icons/telegram.svg'
import Vk from '@shared/assets/icons/vk.svg'
import Youtube from '@shared/assets/icons/youtube.svg'
import Inst from '@shared/assets/icons/inst.svg'
import Close from '@shared/assets/icons/close.svg'
import Plus from '@shared/assets/icons/plus.svg'
import Star from '@shared/assets/icons/star.svg'
import Japan from '@shared/assets/icons/japan.svg'
import Korea from '@shared/assets/icons/korea.svg'
import China from '@shared/assets/icons/china.svg'
import USA from '@shared/assets/icons/usa.svg'
import Burger from '@shared/assets/icons/burger.svg'
import Success from '@shared/assets/icons/success.svg'
import Error from '@shared/assets/icons/error.svg'

export const icons = {
  'advantage-key': AdvantageKey,
  'advantage-transparent': AdvantageTransparent,
  'advantage-delivery': AdvantageDelivery,
  'advantage-law': AdvantageLaw,
  'advantage-manager': AdvantageManager,
  'advantage-economy': AdvantageEconomy,
  'advantage-support': AdvantageSupport,
  'advantage-photo': AdvantagePhoto,
  'advantage-guarantee': AdvantageGuarantee,
  author: Author,
  'arrow-right': ArrowRight,
  'arrow-top': ArrowTop,
  telegram: Telegram,
  vk: Vk,
  youtube: Youtube,
  inst: Inst,
  close: Close,
  plus: Plus,
  star: Star,
  japan: Japan,
  korea: Korea,
  china: China,
  usa: USA,
  burger: Burger,
  success: Success,
  error: Error
}

export type IconKey = keyof typeof icons

interface Props {
  name: IconKey
  class?: string
  ariaLabel?: string
  initial?: boolean
}

const { class: className, name, ariaLabel, initial = false, ...props } = Astro.props as Props

const SelectedIcon = icons[name]

export { Icon }
---

<SelectedIcon
  class:list={['icon', { icon_initial: initial }, className]}
  role={ariaLabel ? 'img' : 'presentation'}
  aria-hidden={ariaLabel ? undefined : 'true'}
  aria-label={ariaLabel}
  {...props}
/>

<style>
  @import './icon.scss';
</style>
