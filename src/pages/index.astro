---
import Button from '@shared/ui/buttons/button/Button.astro'
import Layout from '@widgets/layout/Layout.astro'

const pages = [
  {
    title: 'UI',
    href: 'ui'
  },
  {
    title: 'Главная',
    href: 'main'
  },
  {
    title: 'FrontAPI',
    href: 'front-api'
  },
  {
    title: 'sticky-scroll-anchors',
    href: 'sticky-scroll-anchors'
  }
]
---

<Layout pageName="index">
  <h1 class="text-title-100 devices:text-title-40 px-4 text-primary">Ссылки на страницы проекта</h1>

  <div class="mt-6 flex flex-col gap-4">
    {
      pages.map(page => (
        <Button
          href={`${page.href}`}
          class="w-fit"
        >
          {page.title}
        </Button>
      ))
    }
  </div>
</Layout>
